{
	"compilerOptions": {
		"target": "ES2020",
		"module": "CommonJS",
		"declaration": true,
		"outDir": "dist",
		"jsx": "react",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules", "dist"]
}
